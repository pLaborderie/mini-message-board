<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a class="new-message" href="/new">New message</a>
    <% messages.forEach(function(message){ %>
      <div class="message">
        <h3 class="author"><%- message.user %></h3>
        <p class="content"><%- message.text %></p>
        <p class="date"><%- message.added.toLocaleDateString(); %></p>
      </div>
    <% }); %>
  </body>
</html>
